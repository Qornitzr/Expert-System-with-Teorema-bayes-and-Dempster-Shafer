<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_app"
    tools:context=".fragment.HomeAdminFragment">



    <TextView
        android:id="@+id/txt_Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textStyle="italic"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_Hello"
            android:src="@drawable/logo_sispak"
            />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/profileImage"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:weightSum="4">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDatPenAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <ImageView
                    android:id="@+id/img_datPen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_baseline_virus"
                    />
                <TextView
                    android:id="@+id/tv_DataPen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Penyakit"
                    android:textStyle="italic"
                    android:textSize="23sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@id/txt_jumlahPenAdmin"
                    android:layout_toEndOf="@+id/img_datPen"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_jumlahPenAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textStyle="italic"
                    android:textSize="50sp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDatGejAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <ImageView
                    android:id="@+id/img_dataGej"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_baseline_hourglass"
                    />
                <TextView
                    android:id="@+id/tv_DataGej"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Gejala"
                    android:textStyle="italic"
                    android:textSize="23sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@id/txt_jumlahGejAdmin"
                    android:layout_toEndOf="@+id/img_dataGej"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_jumlahGejAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textStyle="italic"
                    android:textSize="50sp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDatPengAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <ImageView
                    android:id="@+id/img_datPeng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_baseline_science_24"
                    />
                <TextView
                    android:id="@+id/tv_DataPeng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Pengetahuan"
                    android:textStyle="italic"
                    android:textSize="23sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@id/txt_jumlahPengAdmin"
                    android:layout_toEndOf="@+id/img_datPeng"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_jumlahPengAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textStyle="italic"
                    android:textSize="50sp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</RelativeLayout>